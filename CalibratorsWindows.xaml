<Window x:Class="MonitoringSystem2.CalibratorsWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitoringSystem2"
        mc:Ignorable="d"
        Title="CalibratorsWindows" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Calibration Results" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="325,10,0,0"/>
        <DataGrid x:Name="CalibrationResultsDataGrid" AutoGenerateColumns="True" Margin="0,10,20,55"/>
        <Button Content="Начать калибровку" Click="StartButton" VerticalAlignment="Top" Margin="96,134,532,0" Grid.Row="1" Height="30" ></Button>
        <Button Content="Экспорт в PDF" Click="ExportToPdf_Click" VerticalAlignment="Top" Margin="314,134,314,0" Grid.Row="1" Height="30" />
        <Button Content="Выйти" Click="QuitButton" VerticalAlignment="Top" Margin="552,134,76,0" Grid.Row="1" Height="30" ></Button>
    </Grid>
</Window>
