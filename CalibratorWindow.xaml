<Window x:Class="MonitoringSystem2.CalibratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitoringSystem2"
        mc:Ignorable="d"
        Title="CalibratorWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Enter Calibration Data" FontSize="20" Margin="10" HorizontalAlignment="Center"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
            <TextBlock Text="Calibration Type" FontSize="16"/>
            <ComboBox x:Name="CalibrationTypeComboBox" Width="300" Height="30"/>

            <TextBlock Text="Reference Value" FontSize="16" Margin="0,20,0,0"/>
            <TextBox x:Name="ReferenceValueTextBox" Width="300" Height="30"/>

            <TextBlock Text="Description" FontSize="16" Margin="0,20,0,0"/>
            <TextBox x:Name="DescriptionTextBox" Width="300" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Button Content="Export to PDF" Width="150" Height="30" Margin="0,20,0,0" Click="ExportToPDF_Click"/>
        </StackPanel>
    </Grid>
</Window>
