<Window x:Class="MonitoringSystem2.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitoringSystem2"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Admin Panel" FontSize="20" Margin="10" HorizontalAlignment="Center"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
            <Button Content="Manage Sensors" Width="200" Height="30" Click="ManageSensors_Click"/>
            <Button Content="Manage Tests" Width="200" Height="30" Margin="0,10,0,0" Click="ManageTests_Click"/>
            <Button Content="Manage Calibrations" Width="200" Height="30" Margin="0,10,0,0" Click="ManageCalibrations_Click"/>
            <Button Content="Manage Reference Values" Width="200" Height="30" Margin="0,10,0,0" Click="ManageReferenceValues_Click"/>
        </StackPanel>
    </Grid>
</Window>
