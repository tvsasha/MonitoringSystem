<Window x:Class="MonitoringSystem2.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать пользователя" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Полное имя" FontSize="16" />
            <TextBox x:Name="FullNameTextBox" Width="300" Margin="0,5" />

            <TextBlock Text="Роль" FontSize="16" />
            <ComboBox x:Name="RoleComboBox" Width="300" Margin="0,5" />

            <TextBlock Text="Логин" FontSize="16" />
            <TextBox x:Name="LoginTextBox" Width="300" Margin="0,5" />

            <TextBlock Text="Пароль" FontSize="16" />
            <PasswordBox x:Name="PasswordBox" Width="300" Margin="0,5" />

            <Button Content="Сохранить изменения" Width="120" Margin="0,20" HorizontalAlignment="Center" Click="SaveChanges_Click" />
        </StackPanel>
    </Grid>
</Window>
