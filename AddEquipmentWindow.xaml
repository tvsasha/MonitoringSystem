<Window x:Class="MonitoringSystem2.AddEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить оборудование" Height="400" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Тип устройства" FontSize="16" />
            <ComboBox x:Name="DeviceTypeComboBox" Width="300" Margin="0,5" />

            <TextBlock Text="Модель" FontSize="16" />
            <TextBox x:Name="ModelTextBox" Width="300" Margin="0,5" />

            <TextBlock Text="Производитель" FontSize="16" />
            <TextBox x:Name="ManufacturerTextBox" Width="300" Margin="0,5" />

            <TextBlock Text="Дата ввода в эксплуатацию" FontSize="16" />
            <DatePicker x:Name="CommissionDatePicker" Width="300" Margin="0,5" />

            <Button Content="Добавить оборудование" Width="150" Margin="0,20" HorizontalAlignment="Center" Click="AddEquipment_Click" />
        </StackPanel>
    </Grid>
</Window>
