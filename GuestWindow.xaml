<Window x:Class="MonitoringSystem2.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitoringSystem2"
        mc:Ignorable="d"
        Title="GuestWindow" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Test Results" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Grid.Row="0"/>
        <DataGrid x:Name="TestResultsDataGrid" AutoGenerateColumns="True" Margin="10" Grid.Row="0"/>

        <TextBlock Text="Calibration Results" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Grid.Row="1"/>
        <DataGrid x:Name="CalibrationResultsDataGrid" AutoGenerateColumns="True" Margin="10,10,10,55" Grid.Row="1"/>
        <Button Content="Выйти" Click="QuitButton" VerticalAlignment="Top" Margin="314,227,314,0" Grid.Row="1" Height="30" ></Button>
    </Grid>
</Window>
