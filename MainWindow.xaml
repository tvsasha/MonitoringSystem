<Window x:Class="MonitoringSystem2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitoringSystem2"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Login:" VerticalAlignment="Top" Margin="30,50,0,0" HorizontalAlignment="Left"/>
        <TextBox x:Name="LoginTextBox" Width="200" Height="25" VerticalAlignment="Top" Margin="100,50,0,0" HorizontalAlignment="Left"/>

        <TextBlock Text="Password:" VerticalAlignment="Top" Margin="30,100,0,0" HorizontalAlignment="Left"/>
        <TextBox x:Name="PasswordTextBox" Width="200" Height="25" VerticalAlignment="Top" Margin="100,100,0,0" HorizontalAlignment="Left"/>

        <Button Content="Login" Width="100" Height="30" VerticalAlignment="Top" Margin="150,150,0,0" HorizontalAlignment="Left" Click="LoginButton_Click"/>
    </Grid>
</Window>
